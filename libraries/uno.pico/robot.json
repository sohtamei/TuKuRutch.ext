{
	"name"			: "uno.pico",							// マイコン拡張定義	
	"boardType"		: "rp2040:rp2040:rpipico",				// package:platform:board
	"prefs"			: ["custom_dbglvl=rpipico_None",
						"custom_dbgport=rpipico_Disabled",
						"custom_exceptions=rpipico_Disabled",
						"custom_flash=rpipico_2097152_65536",
						"custom_freq=rpipico_133",
						"custom_ipstack=rpipico_ipv4only",
						"custom_opt=rpipico_Small",
						"custom_rtti=rpipico_Disabled",
						"custom_stackprotect=rpipico_Disabled",
						"custom_usbstack=rpipico_tinyusb"],

	// C言語記述注意 : " を使うときは \" とすること

	// ヘッダ (C言語)
	"header":"
#define mVersion \"uno 1.0\"

#include \"main.h\"

#include <Adafruit_NeoPixel.h>
Adafruit_NeoPixel pixels(1/*num*/, 23/*pin*/, NEO_GRB + NEO_KHZ800);

void setNeoPixel(int c, int level)
{
  if(level>100) level = 100;
  int r = ((c>>16)&0xff)*level;
  int g = ((c>>8)&0xff)*level;
  int b = ((c>>0)&0xff)*level;
  pixels.setPixelColor(0, pixels.Color(r/100, g/100, b/100));
  pixels.show();
}
",
	// setup処理 (C言語)
	"setup":"
  pixels.begin();
  pixels.clear();
  setNeoPixel(0x000000, 0);
  setNeoPixel(0x000000, 0);
  _setup(mVersion);
",

	// loop処理 (C言語)
	"loop":"
  _loop();
",

	// ブロック定義
	"blockSpecs": [
	// type			: w-実行関数, R-取得関数, B-true/false取得, h-プログラム開始
	// Block表示	: パラメータ %n-数値, %d-数値+enum, %s-文字列, %m-文字列+enum
	// remote		: 通常関数, 引数+戻値 型定義 B-int8, S-int16, L-int32, F-float, D-double, s-string, b-byteArray
	// enum			: enum値取得
	// 実行/取得関数: 引数 {0},{1}, 関数の区切り＝wブロック';', R/Bブロック','  (C言語)

	//  type | Block表示                                   | Block名           | 初期値     |remote/enum           | 実行/取得関数
	//-------+---------------------------------------------+-------------------+------------+----------------------+----------------------------------
		["-"],					// dummy

		["w", "set LED %d.led %d.onoff",					"setLED",			1,"On",		{"remote":["B","B"],	"func":"_regHist();_setLED({0},{1});"}],
		["w", "play tone %d.noteJ2 beat %d.beats",			"BuzzerJ2",		  "C4","Half",	{"remote":["S","S"],	"func":"_regHist();_tone(P_BUZZER,{0},{1});"}],
		["R", "Sensor %d.sensor average %n times,discharge %n","getAnalogAve",	1,4,8,		{"remote":["B","S","B",	"S"],"func":"_getAdc1({0},{1},{2})"}],
		["B", "SW %d.sw",									"getSW",			1,			{"remote":["B",		"B"],"func":"_getSw({0})"}],
		["w", "set led color %d.color %n",					"setNeoPixel",		"White",10,	{"remote":["L","B"],	"func":"_regHist();setNeoPixel({0},{1});"}],
		["w", "save hist",									"saveHist",						{"remote":[],			"func":"_saveHist();"}],
	],

	// メニュー定義
	"menus": {
		"noteJ2":["C4","D4","E4","F4","G4","A4","B4","C5","D5","E5","F5","G5","A5","B5",],
		"beats"		:["Half","Quarter","Eighth","Whole","Double"],

		"onoff"		:["On","Off"],
		"led"		:[1,2,3,4,5,6],
		"sensor"	:[1,2,3,4],
		"sw"		:[1,2,3],
		"color"		:["Black","Red","Green","Blue","Purple","Yellow","Lightblue","White",],
	},

    // ラベル定義
	"values":{
		"C4":262,"D4":294,"E4":330,"F4":349,"G4":392,"A4":440,"B4":494,
		"C5":523,"D5":587,"E5":659,"F5":698,"G5":784,"A5":880,"B5":988,
		"Half":500,"Quarter":250,"Eighth":125,"Whole":1000,"Double":2000,"Zero":0,
		"On":1,"Off":0,
		"Black":0x000000,"Red":0xFF0000,"Green":0x00FF00,"Blue":0x0000FF,"Purple":0xFF00FF,"Yellow":0xFFFF00,"Lightblue":0x00FFFF,"White":0xFFFFFF,
	},

	// 翻訳定義
	"translators":{
		"ja":{
			"C4":"ド4", "D4":"レ4", "E4":"ミ4", "F4":"ファ4", "G4":"ソ4", "A4":"ラ4", "B4":"シ4",
			"C5":"ド5", "D5":"レ5", "E5":"ミ5", "F5":"ファ5", "G5":"ソ5", "A5":"ラ5", "B5":"シ5", 
			"Half":"2分音符", "Quarter":"4分音符", "Eighth":"8分音符", "Whole":"全音符", "Double":"倍全音符",
			"Black":"黒","Red":"赤","Green":"緑","Blue":"青","Purple":"紫","Yellow":"黄","Lightblue":"水色","White":"白",

			"set LED %d.led %d.onoff"				:"LED %d.led を %d.onoff",
			"play tone %d.noteJ1 beat %d.beats"		:"%d.noteJ1 を %d.beats 鳴らす",
			"play tone %d.noteJ2 beat %d.beats"		:"%d.noteJ2 を %d.beats 鳴らす",
			"play tone %d.noteJ3 beat %d.beats"		:"%d.noteJ3 を %d.beats 鳴らす",
			"Sensor %d.sensor average %n times,discharge %n":"センサ %d.sensor の %n 回平均 放充電 %n",
			"SW %d.sw"								:"スイッチ %d.sw",
			"set led color %d.color %n"				:"LED 色 %d.color %n",
			"save hist"								:"動作を記憶",
		}
	},

	"sort"			: 11,
}
